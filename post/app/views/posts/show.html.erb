<div class="container mt-5">
	<div class="row">
		<div class="col-8 offset-2">

		<%= link_to 'Volver', posts_path, :class => '' %> 

		<h1 class="mt-3"><%= @posting.title %></h1>
		<p><%= markdown(@posting.body) %></p>
		
		<br><br>

		
		
		<!-- Start: Listar comentarios -->
		<% @posting.comments.each do |comment| %>
		 <div class="card">
		    <div class="card-header">
				<p><span><%=comment.user.email%></span><span><%=time_ago_in_words(comment.created_at)%></p>
			</div>

		     <div class="card-body">
		     	<%=comment.body%>
		     </div>
		 </div>
		 <% end %>
		<br>
		 <!-- End: Listar comentarios -->

		 <!-- Start: Hacer comentarios -->
		<% if user_signed_in? %>

		<%= form_for([@posting, @posting.comments.build]) do |f| %>

		<% end %>


		<% end %>
		 <!-- End: Hacer comentarios -->


		</div>
	</div>
</div>
