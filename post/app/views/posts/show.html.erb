<div class="container mt-5">
	<div class="row">
		<div class="col-8 offset-2">

		<%= link_to 'Volver', posts_path, :class => '' %> 

		<h1 class="mt-3"><%= @posting.title %></h1>
		<p><%= markdown(@posting.body) %></p>
		
		<br><br>
		
		<!-- Start: Listar comentarios -->
		<% @posting.comments.each do |comment| %>

		 <div class="card">
		    <div class="card-header">
				<p><span><%=comment.user.email%></span> hace aproximadamente <span><%=l(comment.created_at, format: "%FT%T")%></span> tiempo</p>
			</div>

		     <div class="card-body">
		     	<%=comment.body%>
		     </div>
		 </div>

		<% end %>
		<br>
		 <!-- End: Listar comentarios -->

		</div>
	</div>
</div>
