<div class="container mt-5 mb-5">
	<div class="row">
		<div class="col-8 offset-2">

		<%= link_to 'Volver', posts_path, :class => '' %> 
		<h1 class="mt-3"><%= @posting.title %></h1>
		<p><%= markdown(@posting.body) %></p>
		<br>
		
		<!-- Start: Listar comentarios de post determinado -->
		<% @comments.each do |comments| %>
		 <div class="card">
		    <div class="card-header">
				<p><span><%=comments.user.email%></span> hace  <span><%=time_ago_in_words(comments.created_at)%></p>
			</div>

		     <div class="card-body">
		     	<%=comments.body%>
		     </div>
		 </div><br>
		 <% end %>
		
		 <!-- End: Listar comentarios comentarios de post determinado -->
		

		 <!-- Start: Hacer comentarios -->
		<% if user_signed_in? %>
		
		<%= render partial: 'comments/form' %>

		<% end %>

		 <!-- End: Hacer comentarios -->


		</div>
	</div>
</div>
